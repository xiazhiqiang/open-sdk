{
  "private": true,
  "name": "opensdk",
  "version": "1.0.0",
  "description": "前端开放 SDK 设计及实现 Demo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn install --ignore-engines",
    "build": "lerna run build --stream --sort",
    "clean": "lerna clean && rm -rf package-lock.json yarn.lock node_modules **/package-lock.json **/yarn.lock",
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
