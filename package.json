  },
  "homepage": "https://github.com/xiazhiqiang/opensdk#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "husky": "^8.0.3",
    "lerna": "^6.0.0"
  },
